/* components/coupon/coupon.wxss */
.coupon-toast {
  position: fixed;
  display: flex;
  flex-direction: column;
  align-items: center;
  top:125rpx;
  background-color: #fff;
  z-index: 9999;
  margin-left: 48rpx;
  border-radius: 20rpx;
}

.coupon-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-top: 24rpx;
}

.coupon-user {
  font-size: 40rpx;
  color:#D33B33;
  margin-top: 8rpx;
}

.coupon-content {
  font-size: 36rpx;
  width: 464rpx;
  text-align: center;
  letter-spacing:5rpx;
  margin-top: 16rpx;
}

.coupon-content-time {
  font-size: 32rpx;
  color:#D33B33;
  margin-bottom: 20rpx;
}

.coupon-close {
  position: absolute;
  top: 40rpx;
  right: 40rpx;
  width: 30rpx;
  height: 30rpx;
}

.coupon-btn {
  background: linear-gradient(#FF4B41, #E23A31);
  line-height: 114rpx;
  color:#fff;
  width: 654rpx;
  border-top-left-radius: 0;
  border-top-right-radius: 0;
}