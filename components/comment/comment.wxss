.comment-input {
  position: fixed;
  display: flex;
  justify-content: space-between;
  align-items:flex-start;
  bottom:0;
  width: 100%;
  height: 110rpx;
  z-index: 9999;
  background-color: #fff;
  padding: 20rpx;
  box-sizing: border-box;
}

.comment-input input {
  font-size: 40rpx;
  width: 500rpx;
  line-height: 70rpx;
  border: 1rpx solid #000;
  padding: 10rpx;
}
.comment-input button{
  color:rgba(0, 0, 0, 0.384);
  border-radius: 5rpx;
  padding: 10rpx 20rpx;
  margin-top: 5rpx;
}

button.on{
   background-color: #D33B33;
   color: #fff;
}
