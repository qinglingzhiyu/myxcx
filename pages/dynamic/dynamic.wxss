/* pages/dynamic/dynamic.wxss */
.dynamic-list {
  display: flex;
  justify-content: space-between;
  margin: 32rpx;
  font-size: 28rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #9797975b
}

.dynamic-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
}

.dynamic-avatar image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}


.dynamic-container {
  position: relative;
  margin-left: 24rpx;
  width: 80%;
}

.title {
  display: flex;
  justify-content: space-between;
}

.dynamic-title {
  font-size: 32rpx;
  font-weight: 700;
  line-height: 44rpx;
}

.title-more {
  font-size: 24rpx;
  color:#979797;
  padding: 0 10rpx 10rpx;
}

.dynamic-content {
  line-height: 44rpx;
  letter-spacing:4rpx;
  margin-top: 24rpx;
}
.on {
  color:#007FEE;
  z-index: 9999;
}
.dynamic-img {
  display: flex;
  flex-wrap: wrap;
  margin-top: 24rpx;
}

.dynamic-img image {
  width: 160rpx;
  height: 160rpx;
  margin: 0 16rpx 16rpx 0;
  border-radius: 15rpx;
}

.location {
  position: absolute;
  left: 0;
  font-size: 26rpx;
  color:#D33B33;
  line-height: 34rpx;
}

.like {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 50rpx;
}
.like-btn,.like-share {
  color:#979797;
  font-size: 24rpx;
}

.like-btn image {
  position: relative;
  top: 8rpx;
  width: 34rpx;
  height: 34rpx;
  margin-right: 8rpx;
}

.like-share image {
  width: 148rpx;
  height: 60rpx;
  vertical-align: middle;
}

/* 评论列表 */
.comment-list {
  display: flex;
  margin-top: 20rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.075);
  border-radius: 0;
} 

.coment-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 10rpx;
  margin-right: 16rpx;
}

.comment-content {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: left;
  font-size: 28rpx;
}

.comment-title {
  color: #D33B33;
  line-height: 36rpx;
  font-size: 28rpx;
}


.back {
  position: fixed;
  display: flex;
  justify-content: space-between;
  bottom: 0;
  font-size: 32rpx;
  font-weight: 700;
}

.btn-more {
  line-height: 92rpx;
  width: 288rpx;
  border-radius: 0;
} 

.connect {
  width: 462rpx;
  background: linear-gradient(#FF4B41, #E23A31);
  color: #fff;
  line-height: 92rpx;
  border-radius: 0;
}

/* 删除2个弹窗 */
.del {
  position: absolute;
  top: 40rpx;
  right:0;
}

.del-img {
  width: 150rpx;
}

.delete-btn {
  position: fixed;
  bottom: 50rpx;
  width: 686rpx;
  line-height: 114rpx;
  font-size: 40rpx;
  background-color: #fff;
  align-items: center;
  z-index: 9001;
  margin-left: 32rpx;
}

.empty-title {
  font-size: 28rpx;
  color:#A5A5A5;
  margin-top: 408rpx;
  margin-left: 122rpx;
}

.empty-btn {
  width: 224rpx;
  background-color: #FF5050;
  line-height: 60rpx;
  color:#fff;
  margin-left: 264rpx;
  margin-top: 30rpx;
  border-radius: 46rpx;
}