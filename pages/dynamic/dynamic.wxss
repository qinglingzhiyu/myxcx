/* pages/dynamic/dynamic.wxss */
@import '/common/animate.wxss';
.dynamic-list {
  display: flex;
  justify-content: space-between;
  padding: 32rpx;
  font-size: 28rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f1eeee
}

.dynamic-avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
}

.dynamic-avatar image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.dynamic-container {
  position: relative;
  width: 83%;
}

.title {
  display: flex;
  justify-content: space-between;
  margin-top: 25rpx;
  padding-bottom: 24rpx;
  align-items: center;
  font-size: 36rpx;
  font-weight: 700;
  line-height: 44rpx;
}

.dynamic-title {
  font-size: 36rpx;
  font-weight: 700;
  line-height: 44rpx;
  width: 80%;
  text-align: left;
  display:-webkit-box; 
  overflow:hidden; 
  -webkit-line-clamp:1;
  -webkit-box-orient:vertical;
}

.title-more {
  font-size: 24rpx;
  color:#979797;
  padding: 0 10rpx 10rpx;
}

.dynamic-content {
  margin-top:10rpx;
  font-size:32rpx;
  color:#595959;
  line-height: 44rpx;
  letter-spacing: 4rpx;
  word-break:break-all;
}

.editButton {
  color:#007FEE;
  z-index: 9999;
}

.on{
  display:-webkit-box; 
  overflow:hidden; 
  -webkit-line-clamp:4;
  -webkit-box-orient:vertical;
}

.dynamic-img {
  display: flex;
  flex-wrap: wrap;
  margin-top: 24rpx;
}

.dynamic-img>image {
  width: 180rpx;
  height: 180rpx;
  margin: 0 8rpx 8rpx 0;
  border-radius: 0rpx;
  -webkit-border-radius: 0rpx;
  -moz-border-radius: 0rpx;
  -ms-border-radius: 0rpx;
  -o-border-radius: 0rpx;
}

.location {
  position: absolute;
  left: 0;
  font-size: 26rpx;
  color:#D33B33;
  line-height: 34rpx;
  margin-top: 10rpx;
}

.like {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 50rpx;
}
.like-btn {
  color:#979797;
  font-size: 26rpx;
}

.interest-img {
  position: relative;
  top: 10rpx;
  width: 34rpx;
  height: 34rpx;
}

.comment-img {
  position: relative;
  top: 6rpx;
  width: 34rpx;
  height: 34rpx;
  margin-right: 10rpx;
}
.like-share {
  width: 144rpx;
  color: #fff;
  background-color: #00C464;
  font-family: MicrosoftYaHei-Bold;
  font-size: 28rpx;
  font-weight: 700;
  line-height: 52rpx;
  border-radius: 33rpx;
}

.like-share > image {
  position: relative;
  top:-2rpx;
  display: inline-block;
  margin-right: 10rpx;
  width: 44rpx;
  height: 32rpx;
  vertical-align: middle;
}

/* 评论列表 */
.triangle {
  position: relative;
  left:283rpx;
  top: -30rpx;
  width:0px;
  height:0px;
  border-top:30rpx solid rgba(0,0,0,0);
  border-right:30rpx solid  rgba(0,0,0,0);
  border-bottom:30rpx solid #F5F5F5;
  border-left:30rpx solid  rgba(0,0,0,0);
}

.comment-container {
  position: relative;
  top: -30rpx;
  background-color: #F5F5F5;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
}

.comment-list {
  display: flex;
  margin-top: 20rpx;
  border-radius: 0;
} 

.comment-container .comment-list:last-child .comment-content {
  border-bottom: 0;
}

.coment-avatar {
  width: 62rpx;
  height: 62rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}

.comment-content {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 100%;
  align-items: left;
  font-size: 28rpx;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.075);
}

.comment-title {
  color: #D33B33;
  line-height: 36rpx;
  font-size: 28rpx;
  text-align: left;
  font-weight: 700;
  font-size: 28rpx;
}


.back {
  position: fixed;
  display: flex;
  justify-content: space-between;
  bottom: 0;
  font-size: 32rpx;
  font-weight: 700;
}

.btn-more {
  line-height: 92rpx;
  width: 288rpx;
  border-radius: 0;
} 

.connect {
  width: 462rpx;
  background: linear-gradient(#FF4B41, #E23A31);
  color: #fff;
  line-height: 92rpx;
  border-radius: 0;
}

/* 删除2个弹窗 */
.del {
  position: absolute;
  top: 40rpx;
  right:0;
}

.del-img {
  width: 150rpx;
  height: 75rpx;
}

.delete-btn {
  position: fixed;
  bottom: 50rpx;
  width: 686rpx;
  line-height: 114rpx;
  font-size: 40rpx;
  background-color: #fff;
  align-items: center;
  z-index: 9001;
  margin-left: 32rpx;
}

.empty-title {
  font-size: 28rpx;
  color:#A5A5A5;
  margin-top: 408rpx;
  text-align:center;
}

.empty-btn {
  width: 224rpx;
  background-color: #FF5050;
  line-height: 60rpx;
  color:#fff;
  margin-left: 264rpx;
  margin-top: 30rpx;
  border-radius: 46rpx;
}

.btn {
  text-align: left;
}