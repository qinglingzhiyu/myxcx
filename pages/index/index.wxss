.dynamic-avatar {
  display: flex;
  flex-wrap: wrap;
 
}
.dynamic-img {
   display: flex;
   flex-wrap: wrap;
   margin-top: 24rpx;
}

.dynamic-img image {
  width: 160rpx;
  height: 160rpx;
  margin: 0 22rpx 22rpx 0;
  border-radius: 15rpx;
}
.dynamic-img image:nth-child(3n){
  margin-right: 0;
}

.location {
  position: absolute;
  left: 0;
  font-size: 26rpx;
  color:#D33B33;
  line-height: 34rpx;
}

.like {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 50rpx;
}
.like-btn,.like-share {
  color:#979797;
  font-size: 26rpx;
}

.like-btn image {
  position: relative;
  top: 7rpx;
  width: 34rpx;
  margin-right: 8rpx;
  height: 34rpx;
}

.like-share image {
  width: 148rpx;
  height: 60rpx;
  vertical-align: middle;
}

/* 评论列表 */
.comment-list {
  display: flex;
  margin-top: 20rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.075);
  border-radius: 0;
} 

.comment-list :last{
  border-bottom:0;
}

.coment-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 10rpx;
  margin-right: 16rpx;
}

.comment-content {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: left;
  font-size: 28rpx;
}
.comment-title {
  color: #D33B33;
  line-height: 36rpx;
  font-size: 28rpx;
  text-align: left;
}
.comment-message {
  font-size: 28rpx;
  align-items: left;
  line-height: 50rpx;
  text-align:left;
}

.dynamic-img > image {
    height: 150rpx;
    width: 150rpx;
}
