.main {
  margin-bottom: 100rpx;
}
/* banner */
.banner {
  width: 100%;
  height: 344rpx;
}

.banner-item image {
  width: 100%;
}

/* title */
.list-title {
  font-size: 48rpx;
  font-weight: 700;
  margin: 24rpx 0 32rpx 32rpx;
}

/* 选择器 */
.select {
  display: flex;
  padding: 0 60rpx;
  justify-content: space-between;
  height: 76rpx;
  font-size: 34rpx;
  line-height:76rpx;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid rgba(174, 174, 174, 0.1);
  box-shadow: 0 0 10rpx rgba(174, 174, 174, 0.4);
} 
.picker {
  width: 300rpx;
  display: inline-block;
  margin-left: 30rpx
}

.select-img {
  position: relative;
  width: 32rpx;
  top:5rpx;
}

/* 动态样式 */
.dynamic-list {
  display: flex;
  justify-content: space-between;
  margin: 32rpx;
  font-size: 28rpx;
  padding-bottom: 10rpx;
  border-bottom:  1rpx solid #97979756
}

.dynamic-avatar {
  width: 100rpx;
  height: 100rpx;
}

.dynamic-avatar > image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.dynamic-container {
  position: relative;
  width: 82%;
}
.dynamic-title {
  text-align: left;
  font-size: 32rpx;
  font-weight: 700;
  line-height: 44rpx;
}

.dynamic-content {
  line-height: 44rpx;
  letter-spacing:4rpx;
  margin-top: 24rpx;
}

.on {
  color:#007FEE;
  z-index: 9999;
}

