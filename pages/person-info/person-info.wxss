/* pages/person-info/person-info.wxss */
.form-flex {
  display: flex;
  justify-content: space-between;
  justify-items: center;
  margin: 0 32rpx;
  border-bottom: 1rpx solid rgba(174, 174, 174, 0.1);
  padding: 32rpx 0;
}

.font-red {
  color:#D33B33
}

.avatar {
  line-height: 120rpx;
}

.avatar-img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.profession-input {
  text-align: right;
}

.photo {
  margin: 0 32rpx;
  padding-bottom: 32rpx;
  border-bottom: 1rpx solid #70707059;
} 

.introduce {
  margin: 0 32rpx 100rpx;
}

.photo-title, .introduce-title {
  padding: 32rpx 0 15rpx 0;
}

.photo-content {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.img {
  position: relative;
  width: 153rpx;
  height: 153rpx;
  margin: 20rpx 20rpx 20rpx 0;
}

.bigimg{
 width: 100%;
 height: 100%;
 border-radius: 10rpx;
}

.defaultimg{
   width: 153rpx;
   height: 153rpx;
}

.closeimg{
  position: absolute;
  top:-10rpx;
  right: -8rpx;
  width: 20rpx;
  height: 20rpx;
}


photo-img {
  width: 160rpx;
  height: 160rpx;
  border-radius: 10rpx
}

.photo-img image {
  border-radius: 15rpx;
}

.introduce-content {
  border: 1rpx solid rgba(174, 174, 174, 0.1);
  width: 93%;
  padding: 10rpx 20rpx;
}

.submit-btn {
  font-size: 36rpx;
  line-height: 88rpx;
  text-align: center;
  color:#fff;
  background: linear-gradient(#FF4B41, #E23A31);
  width: 100%;
  border-radius: 10rpx;
}

