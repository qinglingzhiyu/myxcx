/* pages/circle-introduce/circle-introduce.wxss */
@import '/common/animate.wxss';
.main {
  background-color:#EFEFEF;
  padding-bottom: 100rpx;
}
/* banner */
.introduce {
  position: relative;
  width: 100%;
  height: 350rpx;
}

.introduce-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 45rpx 30rpx 0;
  width: 100%;
  box-sizing: border-box;
}

.introduce-avatar {
  width: 174rpx;
  height: 174rpx;
  border-radius: 50%;
}

.introduce-title {
  font-size: 40rpx;
  color:#fff;
  width: 500rpx;
}

.mask {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 88rpx;
  background-color: #000;
  opacity: 0.6;
}

.introduce-bottom {
  position: absolute;
  display: flex;
  align-items: center;
  bottom: 0;
  width: 100%;
  height: 88rpx;
  z-index: 999;
}

.trumpet {
  width: 34rpx;
  height: 34rpx;
  margin-left: 20rpx;
}

.banner {
  width: 100%;
  height: 88rpx;
  color:#fff;
  font-size: 28rpx;
  line-height: 88rpx;
  margin-left: 11rpx;
}

/* 圈子规则 */
.rule,.weal {
  position: relative;
  width: 710rpx;
  margin: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.137);
  border-radius: 15rpx;
}

.rule-title,.weal-title{
  position: absolute;
  top: 0;
  left:39rpx;
  line-height: 83rpx;
  font-size: 36rpx;
  color:#fff;
 
}

.rule-bg,.weal-bg {
  display: block;
  width: 100%;
  height: 83rpx;
}

.rule-content,.weal-content {
  background-color: #fff;
  font-size: 34rpx;
  line-height: 46rpx;
  padding: 15rpx 39rpx 30rpx;

}

.rule-content > view,.weal-content>view{
  margin-top:10rpx; 
}

.join {
  position: fixed;
  bottom: 0;
  width: 100%;
  color:#fff;
  background: linear-gradient(#FF4B41, #E23A31);
  line-height: 98rpx;
  border-radius: 5rpx;
  box-sizing: border-box;
}

.share {
  position: fixed;
  top: 761rpx;
  right: 34rpx;
}

.share >image,.more>image {
  width: 150rpx;
  height: 150rpx;
}

.more {
  position: fixed;
  top: 900rpx;
  right: 34rpx;
}
