<!--pages/circle-introduce/circle-introduce.wxml-->
<view class="main">
  <!-- banner start -->
  <view class="introduce">
    <image class="introduce-bg" src="{{circleIntroduceData.bg_image}}" />
    <image class="introduce-avatar" src="{{circleIntroduceData.image}}"/>
    <text class="introduce-title">{{circleIntroduceData.name}}</text>
    <view class="mask"></view>
    <view class="introduce-bottom">
      <image class="trumpet" src="/images/icon/trumpet.png"/>
      <swiper class="banner" autoplay circular duration="1500" interval="3000">
        <block wx:for="{{circleIntroduceData.brief}}" wx:key="index">
          <swiper-item>{{item}}</swiper-item>
        </block>
      </swiper>
    </view>
  </view>
  <!-- banner end -->

  <!-- 圈子规则 start -->
  <view class="rule">
    <image class="rule-bg" src="/images/red.png"/>
    <view class="rule-title">圈子规则</view>
    <view class="rule-content" >
      <view wx:for="{{circleIntroduceData.descr}}" wx:key="index">{{item}}</view>
    </view>
  </view>
  <!-- 圈子规则 end-->

  <!-- 圈子福利 start-->
  <view class="weal">
    <image class="weal-bg" src="/images/yellow.png"/>
    <view class="weal-title">圈子福利</view>
    <view class="weal-content">
      <view wx:for="{{circleIntroduceData.welfare}}" wx:key="index">{{item}}</view>
    </view>
  </view>
  <!-- 圈子福利 end -->
  <form report-submit="true" bindsubmit="bindSubmit">
    <button class="join" form-type="submit" data-circleid="{{circleIntroduceData.circle_id}}" data-name="{{circleIntroduceData.name}}" open-type="getUserInfo" bindgetuserinfo="userInfo">加入圈子</button>
    <button class="share" form-type="submit" open-type="share" data-circleName="{{circleIntroduceData.name}}">
      <image src="/images/introduce-share.png"/>
    </button>
    <button class="more" form-type="submit" bindtap="goPageWithCircle">
      <image src="/images/more.png"/>
    </button>
  </form>
</view>
